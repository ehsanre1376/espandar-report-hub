<configuration>
  <system.webServer>
    <!-- Basic iisnode configuration with logging -->
    <iisnode 
      nodeProcessCommandLine="&quot;C:\Program Files\nodejs\node.exe&quot;"
      loggingEnabled="true"
      logDirectory="iisnode_logs" 
      devErrorsEnabled="true"
    />

    <!-- Handler to pass requests to iisnode -->
    <handlers>
      <add name="iisnode" path="dist/src/server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- The simplest possible rewrite rule -->
    <rewrite>
      <rules>
        <rule name="Node Backend" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="dist/src/server.js" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>

